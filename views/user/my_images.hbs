<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s2"><a href="{{domainUrl}}/user" onclick="location.href = this.href">{{getLanguageString lang "MY_SUMMARY"}}</a></li>
            <li class="tab col s2"><a href="{{domainUrl}}/user/myDrafts" onclick="location.href = this.href">{{getLanguageString lang "MY_DRAFTS"}}</a></li>
            <li class="tab col s2"><a href="{{domainUrl}}/user/myPosts" onclick="location.href = this.href">{{getLanguageString lang "MY_POSTS"}}</a></li>
            <li class="tab col s2"><a class="active" href="{{domainUrl}}/user/myImages" onclick="location.href = this.href">{{getLanguageString lang "MY_IMAGES"}}</a></li>
            <li class="tab col s2"><a href="{{domainUrl}}/user/myBookmarks" onclick="location.href = this.href">{{getLanguageString lang "MY_BOOKMARKS"}}</a></li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col s12  m4 l3">
        <div class="card">
            <div class="card-content" style="min-height: 300px;text-align: center;">
                <form id="uploadUserImagesForm" action="https://wearmenu.com/uploadUserImages" method="post" enctype="multipart/form-data">
                    <b>{{getLanguageString lang "SELECT_FILES_TO_UPLOAD"}}</b><br/><br/>
                    <input type="file" multiple="multiple" accept="image/*" name="uploadedImages"/>
                    <br/>
                    <br/>
                    <input id="userImagesUploadBtnId" type="submit" value="{{getLanguageString lang "UPLOAD"}}" class="btn"/>
                </form>
            </div>
            <div class="card-description" style="padding: 5px;">
                &nbsp;
            </div>
        </div>
    </div>
    <script>
        document.getElementById("uploadUserImagesForm").onsubmit = onsubmitForUploadUserImagesForm;
    </script>
    {{#each files}}
        <div class="col s12  m4 l3">
            <div class="card">
                <div class="card-image" style="background-image:url('{{../domainUrl}}/user_images/{{../userId}}/{{this}}');
                                                background-size:cover;background-position:center;min-height:300px;">
                </div>
                <div class="card-description" style="padding: 5px;text-align: center;">
                    <a class="btn btn-small red" onclick="deleteUserImage('{{this}}');return false;">Remove<i class="material-icons right">delete_forever</i></a>
                </div>
            </div>
        </div>
    {{/each}}
</div>